{
  "version": "2.0",
  "run_type": "transfer_learning",
  "parameters": {
    "input_model_path": "/path/to/existing/generative/model/augmented.prior",
    "output_model_path": "/output/path/to/save/the/resulting/focused/agent/focused.ckpt",
    "input_smiles_path": "/set/of/smiles/to/use/for/focusing/of/the/prior/generative/model/smiles.smi",
    "save_every_n_epochs": 1,
    "batch_size": 128,
    "clip_gradient_norm": 1.0,
    "num_epochs": 5,
    "starting_epoch": 1,
    "shuffle_each_epoch": 1,
    "collect_stats_frequency": 1,
    "standardize": true,
	"standardization_filters": [{"name": "default", "parameters": {"remove_long_side_chains": false}}],
    "validate_model_vocabulary": true,
    "randomize": true,
    "adaptive_lr_config": {
      "mode": "constant",
      "gamma": 0.8,
      "step": 1,
      "start": 5E-4,
      "min": 1E-5,
      "threshold": 1E-4,
      "average_steps": 4,
      "patience": 8,
      "restart_value": 1E-5,
      "sample_size": 100,
      "restart_times": 0
    }
  },
  "logging": {
    "sender": "this is relevant for remote job submission scenario",
    "recipient": "local",
    "logging_path": "/path/to/a/logging/folder/progress.log",
    "use_weights": 0,
    "job_name": "transfer learning",
    "job_id": "relevant for remote logging"
  }
}