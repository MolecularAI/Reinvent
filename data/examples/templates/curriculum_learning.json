{
	"version": 2,
	"run_type": "curriculum_learning",
	"logging": {
		"sender": "0.0.0.0",
		"recipient": "local",
		"logging_frequency": 10,
		"logging_path": "/path/to/a/logging/folder/progress.log",
		"resultdir": "/path/to/store/the/results",
		"job_name": "curriculum learning",
		"job_id": "test"
	},
	"parameters": {
		"diversity_filter": {
			"name": "NoFilter",
			"bucket_size": 25,
			"minscore": 0.4,
			"minsimilarity": 0.4
		},
		"scoring_function": {
			"name": "custom_product",
			"parameters": [
				{
					"component_type": "matching_substructure",
					"name": "matching_substructure",
					"weight": 2,
					"model_path": "",
					"smiles": [
						"c1ccccc1CC"
					],
					"specific_parameters": {}
				},
				{
					"component_type": "custom_alerts",
					"name": "custom_alerts",
					"weight": 1,
					"model_path": "",
					"smiles": [
						"[*;r8]",
						"[*;r9]",
						"[*;r10]",
						"[*;r11]",
						"[*;r12]",
						"[*;r13]",
						"[*;r14]",
						"[*;r15]",
						"[*;r16]",
						"[*;r17]",
						"[#8][#8]",
						"[#6;+]",
						"[#16][#16]",
						"[#7;!n][S;!$(S(=O)=O)]",
						"[#7;!n][#7;!n]",
						"C#C",
						"C(=[O,S])[O,S]",
						"[#7;!n][C;!$(C(=[O,N])[N,O])][#16;!s]",
						"[#7;!n][C;!$(C(=[O,N])[N,O])][#7;!n]",
						"[#7;!n][C;!$(C(=[O,N])[N,O])][#8;!o]",
						"[#8;!o][C;!$(C(=[O,N])[N,O])][#16;!s]",
						"[#8;!o][C;!$(C(=[O,N])[N,O])][#8;!o]",
						"[#16;!s][C;!$(C(=[O,N])[N,O])][#16;!s]"
					],
					"specific_parameters": {}
				},
				{
					"component_type": "predictive_property",
					"name": "predictive_property",
					"weight": 1,
					"model_path": "/path/to/your/classification/predictive_model.pkl",
					"smiles": "",
					"specific_parameters": {
						"scikit": "classification",
						"descriptor_type": "ecfp_counts",
						"size": 2048,
						"radius": 3,
						"use_counts": true,
						"use_features": true
					}
				}
			]
		},
		"curriculum_learning": {
			"prior": "/path/to/existing/generative/model/augmented.prior",
			"agent": "/path/to/existing/generative/model/augmented.prior",
            "pause_lock": "/path/to/location/where/we/will/create/pause.lock",
			"pause_limit": 15,
			"update_lock": "/path/to/location/where/we/will/create/update.lock",
			"general_configuration_path": "/path/to/existing/alternative/configuration/input.json",
			"scheduled_update_step": 10,
			"n_steps": 200,
			"sigma": 128,
			"learning_rate": 0.0001,
			"batch_size": 128,
			"reset": 0,
			"reset_score_cutoff": 0.5,
			"margin_threshold": 50,
			"distance_threshold": -100.0
		},
		"inception": {
			"smiles": [],
			"memory_size": 100,
			"sample_size": 10
		}
	}
}